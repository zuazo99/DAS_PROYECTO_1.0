<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageViewEsqui"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />
        <TextView
            android:id="@+id/textViewEsquiMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            android:paddingLeft="10dp"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:text="SALOMON"/>
        <TextView
            android:id="@+id/textViewEsquiNombreModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="3"
            android:textSize="15dp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/colorPrimaryText"
            android:text="SALOMON S/RACE"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewPrecioEsqui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="left"
                android:inputType="number"
                android:padding="10dp"
                android:text="20"
                android:textColor="@color/orangePrimary" />

            <TextView
                android:id="@+id/editTextSimboloEuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_toEndOf="@+id/textViewPrecioEsqui"
                android:fontFamily="@font/open_sans_bold"
                android:padding="10dp"
                android:text="â‚¬"
                android:textColor="@color/orangePrimary" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp">


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/ic_star" />

            <TextView
                android:id="@+id/textViewStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:textSize="12dp"
                android:textStyle="italic"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonEditEsqui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@android:color/transparent"
                android:text="@string/editarCategoria"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/buttonDeleteEsqui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:text="@string/deleteCategoria"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>